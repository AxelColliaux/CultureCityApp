{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <h1> Contactez-nous </h1>

            <div class="form-group">
                {{ form_start(contactForm) }}
                {{ form_row(contactForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(contactForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(contactForm.message, {'attr': {'class': 'form-control'}}) }}
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
            </div>

            {{ form_end(contactForm) }}

        </div>
    </div>
</div>

{% endblock %}
