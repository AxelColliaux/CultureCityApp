{% extends 'base.html.twig' %}

{% block title %}Formulaire création événement{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
            {% if app.user %}
                <h1>Hello {{ app.user.name }}</h1> 
            {% endif %}
            
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            <h4 class = "mb-4">Renseigner les informations de votre événement !</h4>

            <div class="row">

                {{ form_start (form, {attr: {'novalidate': 'novalidate'}}) }}
                {{ form_row(form.name) }}
                {{ form_row(form.price) }}
                {{ form_row(form.description) }}
                {{ form_row(form.startDate) }}

                {# ajout d'une checkbox pour les events sur plusieurs jours #}
                <input type="checkbox" id="addEndDate">
                <label for="hiddenDateField">Souhaitez-vous annoncer un événement sur plusieurs jours ?</label>
                <div id="hiddenDateField" style="display: none;">{{ form_row(form.endDate) }}</div>
                
                {{ form_row(form.picture) }}
                {{ form_row(form.category) }}
                <div class="col-12">
                    {{ form_row(form.tags) }}
                </div>
                {{ form_end (form)}}
            </div> {# close row #}
        </div>
    </div>        
</div>
{% endblock %}
