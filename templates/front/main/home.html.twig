{% extends 'base.html.twig' %}

{% block title %}page d'accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>la page home</h1>

{# affiche le user name du user en session  #}
{% if app.user %}
    <H5 class="text-center mt-5">Hello ! {{ app.user.username }}<h5> 
{% endif %}

{# flash message après email vérification  #}
{% for message in app.flashes('emailverification') %}
    <div class="container alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{# flash message après login  #}
{% for message in app.flashes('success-login') %}
    <div class="container alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{# flash message après login et enregistrement statut annonceur  #}
{% for message in app.flashes('success-register-annonceur') %}
    <div class="container alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{# flash message après login et enregistrement statut user  #}
{% for message in app.flashes('success-register-user') %}
    <div class="container alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{# flash message après paswword reset  #}
{% for message in app.flashes('password-reset-success') %}
    <div class="container alert alert-success">
        {{ message }}
    </div>
{% endfor %}    

    <ul>
    cette page liste tous les événements.
    {% for event in events %}
        <li>{{ event.description }} </li>
        <li>{{ user.avatar }} </li>
        {% else %}
  <div class="alert alert-warning mb-3" role="alert">
    <h3>Il n'y a pas encore d'événements enregistrés sur ce site...mais ça ne saurait tarder !</h3> 
  </div>
{% endfor %}
    </ul>


{% for user in users %}
  <img src="{{ vich_uploader_asset (user, 'avatarFile') | imagine_filter ('avatar_200') }}" alt="{{ user.name }}" />
  <img src="{{ vich_uploader_asset (user, 'bannerFile') | imagine_filter ('user_cover_1200') }}" alt="{{ user.name }}" />

    <div class="orgaInfos bi bi-music-note"> {{ user.name }}</div>
      <div class="orgaUlDiv">
      <ul class="orgaUl">
        <li> {{ user.city }}</li>
        <li> {{ user.address1 }}</li>
        <li> {{ user.address2 }}</li>
        <li> {{ user.city }}</li>
        <li> {{ user.zip }}</li>
        <li> {{ user.phone }}</li>
        <li> {{ user.email }}</li>
        <li> {{ user.capacity }}</li>
        <li> {{ user.website }}</li>
        <li> {{ user.facebook }}</li>
        <li> {{ user.twitter }}</li>
        <li> {{ user.instagram }}</li>
      </ul>
    </div>  
    </div>
{% else %}
  <div class="alert alert-warning mb-3" role="alert">
    <h3>Il n'y a pas encore d'utilisateurs enregistrés sur ce site...mais ça ne saurait tarder !</h3> 
  </div>
{% endfor %}


</div>
{% endblock %}
