{% block body %}



   


 
   <img src="{{ vich_uploader_asset (user, 'avatarFile')}}" alt="{{ user.name }}" />

    <div class="orgaInfos bi bi-music-note"> {{ user.name }}</div>
      <div class="orgaUlDiv">
      <ul class="orgaUl">
        <li> {{ user.address1 }}</li>
