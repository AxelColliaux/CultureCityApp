{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                <h3>Création de compte</h3>

                {{ form_start(registration) }}
                    {{ form_row(registration.email) }}
                    {{ form_row(registration.name) }}
                    {{ form_row(registration.password, {
                        label: 'Password'
                    }) }}
                    

                    <div class="ms-3">
                        {{ form_row(registration.status) }}
                    </div>
                    <button type="submit" class="btn btn-success">Valider</button>
                {{ form_end(registration) }}
            </div>
        </div>
    </div>    
{% endblock %}
