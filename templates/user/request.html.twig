{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    <div class="container">

        <div class="col-12 col-md-8 offset-md-2 col-xl-4 offset-xl-4">
            {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1>Réinitialisez votre mot de passe</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>Entrez votre adresse e-mail et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary mt-2">Valider</button>
            {{ form_end(requestForm) }}     
        </div>
    
    </div>

   
{% endblock %}
